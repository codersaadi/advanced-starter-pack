{
  "name": "starter-pack",
  "private": true,
  "homepage": "",
  "version": "1.0",
  "bugs": {
    "url": "https://github.com/codersaadi/starter-pack/issues"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "biome format .",
    "check": "biome check --apply .",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "ui": "pnpm --filter @repo/ui ui",
    "web": "pnpm --filter web",
    "email": "pnpm --filter @repo/email",
    "db": "pnpm --filter @repo/db",
    "core": "pnpm --filter @repo/core",
    "test": "jest",
    "prepare": "husky",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
    "generate:i18n": "pnpm --filter @repo/i18n generate:types",
    "translate:i18n": "pnpm --filter @repo/i18n translate",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/ui"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "turbo": "^2.3.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=18"
  }
}
